<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/battery_background" android:layout_height="match_parent" android:layout_width="match_parent" android:orientation="vertical">
    <LinearLayout android:id="@+id/linearLayout1" android:layout_height="70dip" android:baselineAligned="true" android:orientation="horizontal" android:layout_gravity="center" android:layout_width="wrap_content">
        <TextView android:textAppearance="?android:attr/textAppearanceLarge" android:layout_gravity="center" android:layout_marginTop="20dip" android:id="@+id/batteryStateInfo" android:textSize="32px" android:textStyle="bold" android:textColor="#1eff00" android:text="FULL" android:layout_height="wrap_content" android:layout_width="wrap_content"></TextView>
    </LinearLayout>
    <LinearLayout android:layout_width="320dip" android:layout_height="300dip" android:id="@+id/middleLinear" android:baselineAligned="true" android:background="@drawable/empty_battery_black" android:orientation="vertical">
        <LinearLayout android:layout_width="320dip" android:id="@+id/batteryTopLayout" android:layout_height="1px"></LinearLayout>
        <RelativeLayout android:layout_width="match_parent" android:id="@+id/relativeLayout1" android:layout_height="wrap_content" android:gravity="center_horizontal">
            <TextView android:text="100" android:textAppearance="?android:attr/textAppearanceLarge" android:id="@+id/enegyPercent" android:textSize="32px" android:textStyle="bold" android:layout_height="match_parent" android:layout_width="wrap_content" android:layout_marginTop="130dip"></TextView>
        </RelativeLayout>
        <ImageView android:layout_gravity="center_horizontal" android:id="@+id/batteryEnergy" android:layout_width="match_parent" android:layout_marginLeft="0dip" android:layout_marginRight="0dip" android:layout_marginTop="0dip" android:layout_marginBottom="0dip" android:layout_height="300dip"></ImageView>
        <LinearLayout android:layout_width="320dip" android:id="@+id/batteryBottomLayout" android:layout_height="1px"></LinearLayout>
    </LinearLayout>

</LinearLayout>
